    <update id="update" parameterType="com.example.one.domain.Student">
       update student
        <set >
            <if test="name != null" >
                name = #{name,jdbcType=VARCHAR},
            </if>
            <if test="sex != null" >
                sex = #{sex,jdbcType=INTEGER},
            </if>
            <if test="age != null" >
                age = #{age,jdbcType=INTEGER},
            </if>
            <if test="classId != null" >
                classId = #{classId,jdbcType=INTEGER},
